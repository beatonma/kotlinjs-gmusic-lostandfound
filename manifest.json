{
  "manifest_version": 2,
  "name": "gmusic monitor",
  "version": "0.1",

  "description": "Monitor your Google Music library and check for albums/songs/artists that disappear",

  "author": "Michael Beaton",

  "icons": {

  },

  "default_locale": "en",

  "permissions": [
    "tabs",
    "storage"
  ],
  "web_accessible_resources": [

  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "https://beatonma.org/*",
        "https://play.google.com/music/*"
      ],
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "homepage_url": "https://beatonma.org/"
}
